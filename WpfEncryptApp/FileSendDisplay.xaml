<Window x:Class="WpfEncryptApp.FileSendDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEncryptApp"
        mc:Ignorable="d"
        Title="FileSendDisplay" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="Content" Grid.Row="0" Grid.Column="0" TextWrapping="Wrap" VerticalAlignment="Top" Margin="5" FontSize="20"/>

        <Grid Grid.Row="1" VerticalAlignment="Bottom" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="UL" Content="Send to: " FontSize="14"/>
            <local:SearchBox x:Name="MySearchBox" Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" SearchButtonClick="SearchBox_SearchButtonClick"/>
            <ComboBox x:Name="FilterList" Grid.Row="1" Grid.Column="2" Margin="10,0,25,0"/>
            <Button x:Name="Send" Content="Send" Grid.Row="1" Grid.Column="3"/>
            <Button x:Name="Cancel" Content="Cancel" Grid.Row="1" Grid.Column="5"/>
            <Popup x:Name="SearchPopup" Placement="Top"
           PlacementTarget="{Binding ElementName=MySearchBox}"
           StaysOpen="True" AllowsTransparency="True">
                <local:SearchPopupContent x:Name="Results"/>
            </Popup>
        </Grid>
    </Grid>
</Window>
