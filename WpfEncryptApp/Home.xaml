<Page x:Class="WpfEncryptApp.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfEncryptApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">
    <Viewbox Margin="0,0,0,0">
        <Grid Background="#FF3C3B3B" Height="460">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="115"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="431"/>
                <ColumnDefinition Width="219"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="Welcome" Text="" Grid.Row="0" Grid.Column="1" FontSize="48" HorizontalAlignment="Left" Foreground="White" Width="431"/>
            <TextBlock x:Name="NewF" Text="Send new file" Grid.Row="1" Grid.Column="1" FontSize="20" Foreground="White" Grid.ColumnSpan="2"/>
            <Button x:Name="Add" Click ="Add_Click" Content="+" Grid.Row="2" Grid.Column="1" FontSize="40" Margin="0,0,280,0" Foreground="White" BorderBrush="White" Background="#FF3C3B3B"/>
            <TextBlock x:Name="Notice" Text="Only accepts txt, docx, xlsx, pdf" Grid.Row="2" Grid.Column="1" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Height="61" Width="189" Margin="206,0,0,0" TextWrapping="WrapWithOverflow"/>
            <TextBlock x:Name="Inbox" Text="Inbox/Recieved Files" Grid.Row="3" Grid.Column="1" FontSize="20" Foreground="White" Grid.ColumnSpan="2"/>
            <Button x:Name="H" Content="Home" Grid.Column="0" FontSize="20" Margin="0,0,0,58" Grid.RowSpan="3"/>
            <Button x:Name="O" Content="Options" Grid.Column="0" FontSize="20" Margin="0,57,0,-51" Grid.RowSpan="3" Grid.Row="2"/>
            <Button x:Name="A" Content="Account" Grid.Column="0" FontSize="20" Margin="0,51,0,-215" Grid.Row="4"/>
        </Grid>
    </Viewbox>
</Page>
