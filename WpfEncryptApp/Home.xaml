<Page x:Class="WpfEncryptApp.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfEncryptApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">
    <Viewbox Margin="0,0,0,0">
        <Grid x:Name="HomeGrid" Background="#FF3C3B3B" Height="460" Width="800">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="115"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="700"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.Column="1">
                <Border.Background>
                    <SolidColorBrush Color="#FF8900B5" Opacity="0.5"/>
                </Border.Background>
            </Border>
            <TextBlock x:Name="Welcome" Text="" Grid.Row="0" Grid.Column="1" FontSize="48" HorizontalAlignment="Left" Foreground="White" Width="Auto" Margin="5"/>
            <TextBlock x:Name="NewF" Text="Send new file" Grid.Row="1" Grid.Column="1" FontSize="20" Foreground="White" Grid.ColumnSpan="2" Margin="5, 0, 0, 0"/>
            <Button x:Name="Add" Click ="Add_Click" Content="+" Grid.Row="2" Grid.Column="1" FontSize="40" Margin="5,0,537,0" Style="{StaticResource SpecialButtonHoverStyle}"/>
            <TextBlock x:Name="Notice" Text="Only accepts txt, docx, xlsx, pdf" Grid.Row="2" Grid.Column="1" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Height="61" Width="189" Margin="206,0,0,0" TextWrapping="WrapWithOverflow"/>
            <TextBlock x:Name="Inbox" Text="Inbox/Recieved Files" Grid.Row="3" Grid.Column="1" FontSize="20" Foreground="White" Grid.ColumnSpan="2" Margin="5, 0, 0, 0"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="4" Grid.Column="1">
                <StackPanel x:Name="Notifs">

                </StackPanel>
            </ScrollViewer>
            <Grid x:Name="SideBar" Grid.Column="0" Grid.Row="0" Grid.RowSpan="4" Margin="0,0,0,-215">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button x:Name="H" Content="Home" Grid.Column="0" FontSize="20" Grid.Row="0"/>
                <Button x:Name="S" Content="Sent Files" Grid.Column="0" FontSize="20" Grid.Row="1" Click="S_Click"/>
                <Button x:Name="O" Content="Options" Grid.Column="0" FontSize="20" Grid.Row="2" Click="O_Click"/>
            </Grid>
        </Grid>
    </Viewbox>
</Page>
