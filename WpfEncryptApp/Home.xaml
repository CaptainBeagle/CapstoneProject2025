<Page x:Class="WpfEncryptApp.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfEncryptApp"
      mc:Ignorable="d" 
      d:DesignHeight="460" d:DesignWidth="800"
      Title="Home">
    <Viewbox Margin="0,0,0,0">
        <Grid x:Name="HomeGrid" Background="#FF3C3B3B" Height="460" Width="800">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="115"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="700"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.Column="1">
                <Border.Background>
                    <SolidColorBrush Color="#FF8900B5" Opacity="0.5"/>
                </Border.Background>
            </Border>
            <TextBlock x:Name="Welcome" Text="" Grid.Row="0" Grid.Column="1" FontSize="48" HorizontalAlignment="Left" Foreground="White" Width="Auto" Margin="5"/>
            <TextBlock x:Name="NewF" Text="Send New File" Grid.Row="1" Grid.Column="1" FontSize="20" Foreground="White" Grid.ColumnSpan="2" Margin="5, 0, 0, 0"/>
            <Button x:Name="Add" Click ="Add_Click" Grid.Row="2" Grid.Column="1" FontSize="40" Margin="5,0,537,0" Style="{StaticResource SpecialButtonHoverStyle}">
                <StackPanel>
                    <Image x:Name="Aimg" Source="Icons/Send.png" Width="100"/>
                </StackPanel>
            </Button>
            <TextBlock x:Name="Notice" Text="Only accepts txt, docx, xlsx, pdf" Grid.Row="2" Grid.Column="1" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Height="61" Width="189" Margin="206,0,0,0" TextWrapping="WrapWithOverflow"/>
            <TextBlock x:Name="Inbox" Text="Inbox/Recieved Files" Grid.Row="3" Grid.Column="1" FontSize="20" Foreground="White" Grid.ColumnSpan="2" Margin="5, 0, 0, 0"/>
            <TextBlock x:Name="Labels" Text="             File name                                                                    Sent from" Grid.Row="4" Grid.Column="1" FontSize="20" Foreground="White"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="5" Grid.Column="1" Height="185">
                <StackPanel x:Name="Notifs">

                </StackPanel>
            </ScrollViewer>
            <Grid x:Name="SideBar" Grid.Column="0" Grid.Row="0" Grid.RowSpan="4" Margin="0,0,0,-215">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button x:Name="H" Grid.Column="0" FontSize="20" Grid.Row="0">
                    <StackPanel>
                        <Image x:Name="Himg" Source="Icons/Home.png" Width="80"/>
                        <Label Content="Home" HorizontalAlignment="Center">
                            <Label.Style>
                                <Style TargetType="Label">
                                    <Style.Triggers>
                                        <DataTrigger Value="True">
                                            <DataTrigger.Binding>
                                                <Binding Path="IsMouseOver" RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Button}}"/>
                                            </DataTrigger.Binding>
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Label.Style>
                        </Label>
                    </StackPanel>
                </Button>
                <Button x:Name="S" Grid.Column="0" FontSize="20" Grid.Row="1" Click="S_Click">
                    <StackPanel>
                        <Image x:Name="Mimg" Source="Icons/Mail.png" Width="80"/>
                        <Label Content="Sent Files" HorizontalAlignment="Center">
                            <Label.Style>
                                <Style TargetType="Label">
                                    <Style.Triggers>
                                        <DataTrigger Value="True">
                                            <DataTrigger.Binding>
                                                <Binding Path="IsMouseOver" RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Button}}"/>
                                            </DataTrigger.Binding>
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Label.Style>
                        </Label>
                    </StackPanel>
                </Button>
                <Button x:Name="O" Grid.Column="0" FontSize="20" Grid.Row="2" Click="O_Click">
                    <StackPanel>
                        <Image x:Name="Oimg" Source="Icons\Options.png" Width="80"/>
                        <Label Content="Options" HorizontalAlignment="Center">
                            <Label.Style>
                                <Style TargetType="Label">
                                    <Style.Triggers>
                                        <DataTrigger Value="True">
                                            <DataTrigger.Binding>
                                                <Binding Path="IsMouseOver" RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Button}}"/>
                                            </DataTrigger.Binding>
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Label.Style>
                        </Label>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
    </Viewbox>
</Page>
