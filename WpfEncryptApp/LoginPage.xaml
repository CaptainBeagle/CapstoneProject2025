<Page x:Class="WpfEncryptApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfEncryptApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="#FF3C3B3B">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="40"/>

        </Grid.RowDefinitions>
        <TextBlock x:Name="Label" Text="Sign In" Grid.Row="0" FontSize="48" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,10" TextWrapping="WrapWithOverflow" Width="146"/>
        <TextBlock x:Name="UserLabel" Grid.Row="1" Text="Username" FontSize="24" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Width="106"/>
        <TextBlock x:Name="PassLabel" Grid.Row="3" Text="Password" FontSize="24" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100"/>
        <TextBox x:Name="UserName" Grid.Row="2" TextWrapping="Wrap" AcceptsReturn="True" Margin="260,0,260,0" FontSize="24"/>
        <PasswordBox x:Name="Password" Grid.Row="5" Margin="260,0,260,0" FontSize="24"/>
    </Grid>
</Page>
