<Page x:Class="WpfEncryptApp.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfEncryptApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="#FF3C3B3B">
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="80"/>

        </Grid.RowDefinitions>
        <Image x:Name="MainIcon" Grid.Row="0" HorizontalAlignment="Left" Width="70" Height="70" Source="C:\Users\Rhian\OneDrive\Desktop\GitRepository\CapstoneProject2025\WpfEncryptApp\Icons\Lock.png" Margin="131,0,0,0"/>
        <TextBlock x:Name="Label" Text="Encryption App" Grid.Row="0" FontSize="48" Foreground="#8900b5" HorizontalAlignment="Center" Margin="0,0,0,10" TextWrapping="WrapWithOverflow" Width="378" FontFamily="Segoe UI Black"/>
        <TextBlock x:Name="UserLabel" Grid.Row="1" Text="Username" FontSize="24" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Width="106"/>
        <TextBlock x:Name="PassLabel" Grid.Row="3" Text="Password" FontSize="24" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100"/>
        <TextBox x:Name="UserName" Grid.Row="2" TextWrapping="Wrap" AcceptsReturn="True" Margin="260,0,260,0" FontSize="24"/>
        <PasswordBox x:Name="Password" Grid.Row="4" Margin="260,0,260,0" FontSize="24"/>
        <TextBlock x:Name="ErrorMsg" Text="Incorrect username or password" Grid.Row="5" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Width="260" Foreground="#FFFFA6A6"/>
        <Button x:Name="Submit" Grid.Row="7" Content="Sign In" FontSize="25" Click="SignIn" Margin="309,0,327,40"/>
    </Grid>
</Page>
