<Window x:Class="WpfEncryptApp.NewPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfEncryptApp"
        mc:Ignorable="d"
        Title="NewPassword" Height="450" Width="800">
    <Grid x:Name="background">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="214"/>
            <RowDefinition Height="86"/>
            <RowDefinition Height="42"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="2" Grid.Row="1">
            <TextBlock x:Name="Notice1" Text="New Password must be 10 - 40 characters long." FontSize="22" FontWeight="SemiBold" Margin="15"/>
            <TextBlock x:Name="Notice2" Text="New Password must contain at least 1 number and 1 special character (!, @, #, $, etc)." FontSize="22" FontWeight="SemiBold" TextWrapping="Wrap" Margin="15"/>
            <TextBlock x:Name="Notice3" Text="New Password cannot be the same as current password." FontSize="22" FontWeight="SemiBold" Margin="15"/>
        </StackPanel>

        <TextBlock x:Name="Error" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" FontSize="20" Text="Sample"  Foreground="#FFFF7373" Visibility="Hidden"/>
        <Label x:Name="label" Content="New Password: " Grid.Column="1" Grid.Row="3" FontSize="20"/>
        <TextBox x:Name="Input" Grid.Column="2" Grid.Row="3" FontSize="20" Margin="5,5,5,5"/>
        <Grid Grid.Column="2" Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button x:Name="Confirm" Content="Confirm" Grid.Column="1" Grid.Row="0" Margin="5" Click="Confirm_Click"/>
            <Button x:Name="Cancel" Content="Cancel" Grid.Column="2" Grid.Row="0" Margin="5" Click="Cancel_Click"/>
        </Grid>
    </Grid>
</Window>
