<UserControl x:Class="WpfEncryptApp.RecNotif"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfEncryptApp"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="700">
    <Grid Background="#FF3C3B3B">
        <Border BorderBrush="#FFC8C8C8" BorderThickness="2">
            <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="185"/>
            </Grid.ColumnDefinitions>
                <Label x:Name="Placeholder" Grid.Column="0" Background="#FFFFFEFE"/>
                <TextBlock x:Name="FileName" Text="" Grid.Column="2" Background="#FF3C3B3B" Foreground="White" FontSize="20"/>
                <TextBlock x:Name="SenderName" Text="" Grid.Column="3" Background="#FF3C3B3B" Foreground="White" FontSize="20"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
