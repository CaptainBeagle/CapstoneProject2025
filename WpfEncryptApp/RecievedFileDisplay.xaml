<Page x:Class="WpfEncryptApp.RecievedFileDisplay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfEncryptApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RecievedFileDisplay">

    <Grid Background="#FF3C3B3B">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Height="100" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="FileTitle" Grid.Column="0" Foreground="White" FontSize="24"/>
            <TextBlock x:Name="FileSender" Grid.Column="1" Foreground="White" FontSize="16" HorizontalAlignment="Right" />
        </Grid>
        <TextBlock x:Name="Content" Grid.Row="1" FontSize="16" Foreground="White"/>
    </Grid>
</Page>
