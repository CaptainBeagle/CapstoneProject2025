<Page x:Class="WpfEncryptApp.RecievedFileDisplay"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfEncryptApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RecievedFileDisplay">

    <Grid x:Name="Display" Background="#FF3C3B3B">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Height="100" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="FileTitle" Grid.Column="1" Foreground="White" FontSize="24"/>
            <TextBlock x:Name="FileSender" Grid.Column="2" Foreground="White" FontSize="16" HorizontalAlignment="Right"/>
            <Button x:Name="Back" Margin="10" FontSize="18" Click="Back_Click">
                <Grid>
                    <Image Source="C:\Users\Rhian\OneDrive\Desktop\GitRepository\CapstoneProject2025\WpfEncryptApp\Icons\Back.png"/>
                    <Label Content="Back" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Button>
            
        </Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.Row="1">
            <StackPanel x:Name="DataHolder" Grid.Row="1">
                <TextBlock x:Name="Content" Grid.Row="1" FontSize="16" Foreground="White"/>
            </StackPanel>
        </ScrollViewer>
        <Button x:Name="Export" Margin="5" Grid.Row="2" Content="Export File" FontSize="20" Click="Export_Click"/>
    </Grid>
</Page>
