<Page x:Class="WpfEncryptApp.ViewSentFiles"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfEncryptApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewSentFiles">

    <Viewbox Margin="0,0,0,0">
        <Grid x:Name="HomeGrid" Background="#FF3C3B3B" Height="460" Width="800">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="700"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="Welcome" Text="Sent Files" Grid.Row="0" Grid.Column="1" FontSize="48" HorizontalAlignment="Left" Foreground="White" Width="431"/>
            <StackPanel x:Name="Notifs" Grid.Row="4" Grid.Column="1">
                
            </StackPanel>
            
            <Grid x:Name="SideBar" Grid.Column="0" Grid.Row="0" Grid.RowSpan="4" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button x:Name="H" Content="Home" Grid.Column="0" FontSize="20" Grid.Row="0" Click="H_Click"/>
                <Button x:Name="S" Content="Sent Files" Grid.Column="0" FontSize="20" Grid.Row="1"/>
                <Button x:Name="O" Content="Options" Grid.Column="0" FontSize="20" Grid.Row="2" Click="O_Click"/>
            </Grid>
        </Grid>
    </Viewbox>
</Page>
